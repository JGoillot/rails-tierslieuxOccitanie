<%= render 'shared/navbar' %>

<div class="container">
  <div class="title"></div>


  <div class="text-center">
    <h2>Administration – Tiers Lieux Occitanie</h2>

    <div class="col-md-6">
      <h4>Tiers-Lieux en attende de validation</h4>
      <div class="waiting-list">
        <% @working_places.each do |place| %>
          <%= link_to working_place_path(place) do %>
            <%= place.name %>
          <% end %>
          <%= link_to working_place_validate_path(place, :statut => true), :method => :put do %>
            <i class="fa fa-check" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <h4>Tiers-Lieux membre du réseaux</h4>
      <div class="waiting-list">
        <% @tiers_lieux.each do |place| %>
        <div class="member">
          <%= link_to working_place_path(place) do %>
            <%= place.name %>
          <% end %>
          <%= link_to edit_working_place_path(place) do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>

  </div>
</div>



